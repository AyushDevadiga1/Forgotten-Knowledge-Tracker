# Forgotten Knowledge Tracker (FKT) Configuration

# Tesseract OCR Path
# Windows example: C:\Program Files\Tesseract-OCR\tesseract.exe
# If Tesseract is in your PATH, you can leave this blank or use "tesseract"
TESSERACT_PATH=

# Data Directory
# Default: tracker_app/data
DATA_DIR=

# Webcam Tracking
# Set to 'False' to disable webcam tracking by default
USER_ALLOW_WEBCAM=True

# Spacing Algorithm Parameters
# Default Ease Factor: 2.5
SM2_DEFAULT_EASE=2.5
